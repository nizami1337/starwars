import { useEffect, useState } from "react";
import "./People.css"
import Header from "../Header/Header";

interface PersonMin {
    uid: string,
    name: string,
    url: string
}

interface Person {
    birth_year: string,
    eye_color: string,
    films: string[],
    gender: string,
    hair_color: string,
    height: string,
    homeworld: string,
    mass: string,
    name: string,
    skin_color: string,
    created: string,
    edited: string,
    species: string[],
    starships: string[]
    url: string,
    vehicles: string[]
}

const People = () => {

    const [people, setPeople] = useState<PersonMin[]>([]);
    const [nextUrl, setNextUrl] = useState<string>('');
    
    async function getPeople() {
        let urlToFetch = !nextUrl ? "https://swapi.tech/api/people/?format=json" : nextUrl + "?format=json"
        console.log(`url: ${urlToFetch}`)
        const r = await fetch(urlToFetch)
        const json = await r.json();
        setNextUrl(json.next)
        setPeople(people.concat(json.results))
    }

    async function getPerson(url: string) {
        const r = await fetch(url);
        const json = await r.json();
        return await json.result.properties
    }

    useEffect(() => {
        getPeople()
    }, [])

    return (
        <>
            <Header></Header>
            <div className="container">
                {people.map(person => {
                    const item = getPerson(person.url)
                    return (
                        <div className="item">
                            <h2>{item.name}</h2>
                            <span className="item__field">Gender: {item.gender}</span>
                            <span className="item__field">Born in {item.birth_year}</span>
                            <span className="item__field">Height: {item.height}</span>
                        </div>
                    )
                })}
            </div>
            <button className="loadMoreBtn" onClick={() => getPeople()}>Load More</button>
        </>
    )
}

export default People